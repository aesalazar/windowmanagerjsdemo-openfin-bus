<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainBox"
      stylesheets="@MainWindow.css"
      xmlns="http://javafx.com/javafx/8.0.112"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="windowmanagerdemo.window.MainController">
        <HBox fx:id="controlBox">
                <Button fx:id="publishButton" text="Publish" />
                <TextField fx:id="messageText" text="Hi from JAVA!" />
                <Button fx:id="jsButton" disable="true" text="JavaScript" />
                <Button fx:id="wpfButton" disable="true" text=".NET" />
        </HBox>

        <ListView fx:id="logListView" />
</VBox>
